{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "DEV_ONLY_SECRET_DO_NOT_USE_IN_PRODUCTION_32CHARS!",
